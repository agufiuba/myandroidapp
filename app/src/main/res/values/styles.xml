<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/totalWhite</item>
        <item name="android:titleTextColor">@color/colorAccent</item>
        <item name="android:windowBackground">@color/totalWhite</item>
        <item name="android:autofilledHighlight">@color/transparent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="tl" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--<item name="android:textColorHint">@color/colorAccent</item>-->
        <!--<item name="android:textSize">40sp</item>-->
        <!--&lt;!&ndash; Label color in TRUE state and bar color FALSE and TRUE State &ndash;&gt;-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorControlNormal">@color/colorAccent</item>-->
        <!--<item name="colorControlActivated">@color/colorAccent</item>-->
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="b" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>

    </style>
    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/colorAccent</color>

</resources>
