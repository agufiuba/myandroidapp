    <style name="tl" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/grey</item> <!-- color del placeholder de arriba -->
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/grey</item> <!-- color del borde on focus -->
        <item name="android:textColorHint">@color/colorText</item> <!-- color del placeholder -->
